<div class="parallax-container">
  <div class="section no-pad-bot">
    <div class="row center">
      <div class="col s8 offset-s2 intro-text">
        <h1>Mongo Scraper</h1>
        <h2>Lates Formula 1 News</h2>
        <h4>Scrape New Articles to begin scraping!</h4>
      </div>
    </div>
  </div>
  <div class="parallax">
    <img src="./assets/images/default.png" alt="f1 start" style="display: block;">
  </div>
</div>

<div class="container">
  {{!-- for each article in mongodb --}}
  {{#each articleData}}
  {{!-- create a row, column, and card --}}
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content grey lighten-4">
          <div class="row valign-wrapper">
            <div class="col s8">
              {{!-- title and summary from db go here --}}
              <span class="card-title">{{this.title}}</span>
            </div>
            <div class="col s4">
              <img class="responsive-img" src="{{this.image}}" alt="article image">
            </div>
          </div>
        </div>
        <div class="card-action valign-wrapper center-align red darken-4">
          {{!-- link to article goes here --}}
          <div class="col s6 card-links">
            <a href="https://www.formula1.com/en/latest.html{{this.link}}" class="white-text" style="margin: 0px;" target="_blank"><button class="btn grey darken-3">View Article</button></a>
          </div>
          <div class="col s6 card-links save-article-div">
            <button data-dbid="{{this._id}}" class="btn save-article-button grey darken-3">Save Article</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>